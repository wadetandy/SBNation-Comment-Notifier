{
  "name": "SBNation Notifier",
  "version": "1.0",
  "description": "Creates a desktop notification when there are new comments in a background thread",
  "page_action": {
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["jquery.js", "code.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "notifications",
    "tabs"
  ]
}